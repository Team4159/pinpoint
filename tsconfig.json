{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@/styles/*" : [
        "styles/*"
      ],
      "@/stores/*" : [
        "stores/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/theme" : [
        "theme/index"
      ],
      "@/styles" : [
        "styles/index"
      ],
      "@/types" : [
        "types/index"
      ],
      "@/utils" : [
        "utils/index"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
